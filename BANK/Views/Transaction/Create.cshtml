@model BANK.Data.Entities.Transaction

@{
    ViewData["Title"] = "Create Transaction";
}

<h2>Create Transaction</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CardId" value="@ViewBag.CardId" />
    <input type="hidden" asp-for="PayeeId" value="@ViewBag.PayeeId" />
    <input type="hidden" asp-for="Date" value="@DateTime.UtcNow" />
    
    <div class="form-group">
        <label asp-for="Receiver"></label>
        <input asp-for="Receiver" class="form-control" />
        <span asp-validation-for="Receiver" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Transaction</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}