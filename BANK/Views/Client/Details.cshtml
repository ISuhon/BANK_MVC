@model Client

@{
    ViewData["Title"] = "Client Details";
}

<h2>Client Details</h2>

<div>
    <p><strong>Full Name:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<h3>Accounts</h3>

@if (Model.Accounts != null && Model.Accounts.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Account ID</th>
                <th>Currency</th>
                <th>Total Cards</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.Accounts)
            {
                <tr>
                    <td>@account.Id</td>
                    <td>@account.Currency</td>
                    <td>@account.Cards?.Count</td>
                    <td>
                        <a asp-controller="Account" asp-action="Details" asp-route-id="@account.Id" class="btn btn-info btn-sm">View Details</a>
                        <a asp-controller="Account" asp-action="Delete" asp-route-id="@account.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>This client has no accounts.</p>
}